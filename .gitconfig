[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    light = false
    line-numbers = true
    side-by-side = true
    syntax-theme = base16

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[user]
    email = thanhvule0310@gmail.com
    name = Vu Le Thanh

[init]
    defaultBranch = main

[push]
    default = current

[alias]
    l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
